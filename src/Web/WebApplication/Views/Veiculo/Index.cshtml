@model IEnumerable<WebApplication.Models.VeiculoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Veículo</h1>

<div class="table">
    
</div>

<p>
    <a asp-action="Criar"  class="btn btn-primary">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>    
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quilometragem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quilometragem)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id=item.VeiculoId}) |
                @Html.ActionLink("Detalhar", "Detalhar", new { id=item.VeiculoId }) |
                @Html.ActionLink("Excluir", "Excluir", new { id=item.VeiculoId })
            </td>
        </tr>
}
    </tbody>
</table>
