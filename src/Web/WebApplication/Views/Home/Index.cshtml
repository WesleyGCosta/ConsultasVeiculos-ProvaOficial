@model WebApplication.Models.VeiculoViewModel

<div>
    <h2 class="text-center">Pesquisar Veículo</h2>
</div>

<div class="card">
    <div class="container">
        <form asp-controller="Veiculo" asp-action="BuscarMarca">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Marca" class="control-label"></label>
                        <input asp-for="Marca" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Pesquisar" class="btn btn-primary " />
            </div>
        </form>
        <hr />
        <form asp-controller="Veiculo" asp-action="BuscarModelo">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Modelo" class="control-label"></label>
                        <input asp-for="Modelo" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Pesquisar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
